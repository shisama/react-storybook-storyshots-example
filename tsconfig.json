    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "lib": ["esnext", "dom"],
    "target": "es5",
    "jsx": "react",
    "rootDirs": ["src"],
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
